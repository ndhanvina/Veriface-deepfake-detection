{
  "seed": 42,
  "data": {
    "train_dir": "data/train",
    "val_dir": "data/val",
    "img_size": 224,
    "num_workers": 2
  },
  "train": {
    "batch_size": 32,
    "epochs": 5,
    "lr": 0.001,
    "weight_decay": 0.0001,
    "mixed_precision": true
  },
  "model": {
    "backbone": "resnet18",
    "pretrained": false,
    "num_classes": 2,
    "dropout": 0.2
  },
  "output": {
    "dir": "outputs",
    "save_best_by": "val_auc"
  },
  "paths": {
    "checkpoint": "outputs/best.ckpt",
    "feedback": "feedback_memory.json"
  },
  "heuristics": {
    "fake_score_threshold": 2,
    "confidence_threshold_real": 0.6,
    "frequency_threshold": 0.012,
    "sharpness_threshold": 120,
    "noise_threshold": 3.0
  }
}